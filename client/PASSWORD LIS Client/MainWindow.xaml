<Window x:Class="PASSWORD_LIS_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PASSWORD_LIS_Client"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        WindowState="Maximized"
        MinHeight="800" MinWidth="1200"
        Title="MainWindow" Height="1000" Width="1400">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryAccentBrush" Color="#66B2FF"/>
        <SolidColorBrush x:Key="SecondaryAccentBrush" Color="#76EEB7"/>
        <SolidColorBrush x:Key="WarningActionBrush" Color="#FFC107"/>
        <SolidColorBrush x:Key="LightTextBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="DarkTextBrush" Color="#343A40"/>
        <SolidColorBrush x:Key="SubtleBorderBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SubtleTextBrush" Color="#6C757D"/>

        <Style x:Key="FloatingPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PanelBackgroundBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="{StaticResource SubtleBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="10" Color="Black" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#F0F4F8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
            <Setter Property="CaretBrush" Value="{StaticResource PrimaryAccentBrush}"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BaseButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource LightTextBrush}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="25,15"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="{StaticResource PrimaryAccentBrush}"/>
        </Style>
        <Style x:Key="WarningButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="{StaticResource WarningActionBrush}"/>
        </Style>

        <Style TargetType="Separator">
            <Setter Property="Background" Value="{StaticResource SubtleBorderBrush}"/>
            <Setter Property="Margin" Value="0,15"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1.2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Style="{StaticResource FloatingPanelStyle}">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Equipo: Azul" FontSize="24" FontWeight="Bold" Foreground="{StaticResource PrimaryAccentBrush}" HorizontalAlignment="Center"/>
                <Separator/>
                <Grid Margin="10,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Ronda:" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource DarkTextBrush}"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="1/5" FontSize="18" Foreground="{StaticResource SubtleTextBrush}" HorizontalAlignment="Right"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Palabra:" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource DarkTextBrush}" Margin="0,5,0,0"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="2/5" FontSize="18" Foreground="{StaticResource SubtleTextBrush}" HorizontalAlignment="Right" Margin="0,5,0,0"/>
                </Grid>
                <Separator/>
                <TextBlock Text="Puntos de la palabra:" HorizontalAlignment="Center" FontSize="18" Foreground="{StaticResource DarkTextBrush}"/>
                <TextBlock Text="1" HorizontalAlignment="Center" FontSize="80" FontWeight="Bold" Foreground="{StaticResource DarkTextBrush}"/>
                <Separator/>
                <TextBlock Text="Puntos Totales:" HorizontalAlignment="Center" FontSize="18" Foreground="{StaticResource DarkTextBrush}"/>
                <TextBlock Text="15" HorizontalAlignment="Center" FontSize="50" FontWeight="Bold" Foreground="{StaticResource DarkTextBrush}"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" Style="{StaticResource FloatingPanelStyle}">
            <StackPanel VerticalAlignment="Center">
                <Grid Width="200" Height="200">
                    <Ellipse Stroke="{StaticResource SecondaryAccentBrush}" StrokeThickness="10"/>
                    <TextBlock Text="00:53" FontSize="60" FontWeight="Bold" Foreground="{StaticResource DarkTextBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
                <Button Content="PASO" Style="{StaticResource WarningButtonStyle}" Margin="0,40,0,0"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource FloatingPanelStyle}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Palabra a adivinar:" FontSize="20" Foreground="{StaticResource SubtleTextBrush}"/>
                <TextBlock Text="COMPUTADORA" FontSize="48" FontWeight="Bold" Foreground="{StaticResource DarkTextBrush}"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource FloatingPanelStyle}">
            <StackPanel VerticalAlignment="Center">
                <TextBox Style="{StaticResource ModernTextBoxStyle}" Height="120" Text="Escribe aquí tu pista..."/>
                <Button Content="ENVIAR" Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Center" Margin="0,20,0,0"/>
            </StackPanel>
        </Border>

    </Grid>

</Window>
