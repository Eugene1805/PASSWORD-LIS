<Window x:Class="PASSWORD_LIS_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PASSWORD_LIS_Client"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        MinHeight="800" MinWidth="1200"
        Title="MainWindow" Height="1000" Width="1400">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryAccentBrush" Color="#66B2FF"/>
        <SolidColorBrush x:Key="SecondaryAccentBrush" Color="#76EEB7"/>
        <SolidColorBrush x:Key="DestructiveActionBrush" Color="#FF6B6B"/>
        <SolidColorBrush x:Key="LightTextBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="DarkTextBrush" Color="#343A40"/>
        <SolidColorBrush x:Key="SubtleBorderBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#FFFFFF"/>

        <Style x:Key="FloatingPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PanelBackgroundBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="{StaticResource SubtleBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="10" Color="Black" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#F0F4F8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
            <Setter Property="CaretBrush" Value="{StaticResource PrimaryAccentBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BaseButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource LightTextBrush}"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="{StaticResource PrimaryAccentBrush}"/>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="{StaticResource SecondaryAccentBrush}"/>
        </Style>

        <Style x:Key="DestructiveButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="{StaticResource DestructiveActionBrush}"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="380"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="0" VerticalAlignment="Center">
            <Border Style="{StaticResource FloatingPanelStyle}">
                <StackPanel>
                    <Border Background="{StaticResource PrimaryAccentBrush}" CornerRadius="12,12,0,0" Padding="15">
                        <TextBlock Text="Equipo 1" Foreground="{StaticResource LightTextBrush}" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </Border>
                    <StackPanel Margin="15">
                        <Border BorderBrush="{StaticResource SubtleBorderBrush}" BorderThickness="0,0,0,1" Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse Width="40" Height="40" Fill="{StaticResource PrimaryAccentBrush}" Margin="0,0,15,0"/>
                                <TextBlock Text="👑 Eugenio" VerticalAlignment="Center" Grid.Column="1" FontSize="16" Foreground="{StaticResource DarkTextBrush}"/>
                            </Grid>
                        </Border>
                        <Border Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse Width="40" Height="40" Fill="{StaticResource PrimaryAccentBrush}" Margin="0,0,15,0"/>
                                <TextBlock Text="Uriel" VerticalAlignment="Center" Grid.Column="1" FontSize="16" Foreground="{StaticResource DarkTextBrush}"/>
                                <Button Grid.Column="2" Content="➖" ToolTip="Expulsar jugador" Foreground="{StaticResource DestructiveActionBrush}" Background="Transparent" BorderThickness="0" FontSize="16" Cursor="Hand"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource FloatingPanelStyle}">
                <StackPanel>
                    <Border Background="{StaticResource SecondaryAccentBrush}" CornerRadius="12,12,0,0" Padding="15">
                        <TextBlock Text="Equipo 2" Foreground="{StaticResource LightTextBrush}" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </Border>
                    <StackPanel Margin="15">
                        <TextBlock Text="Esperando jugadores..." Margin="10" HorizontalAlignment="Center" FontSize="16" Foreground="#999" FontStyle="Italic"/>
                        <TextBlock Text="Esperando jugadores..." Margin="10" HorizontalAlignment="Center" FontSize="16" Foreground="#999" FontStyle="Italic"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="0">
            <Border Style="{StaticResource FloatingPanelStyle}" MaxHeight="400">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Chat Grupal" Margin="15" FontSize="18" FontWeight="Bold" Foreground="{StaticResource DarkTextBrush}"/>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="15,0,15,15">
                        <StackPanel>
                            <TextBlock TextWrapping="Wrap"><Run FontWeight="Bold" Foreground="{StaticResource PrimaryAccentBrush}">Eugenio:</Run> ¡Hola a todos! ¿Listos?</TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="0,5,0,0"><Run FontWeight="Bold" Foreground="{StaticResource PrimaryAccentBrush}">Uriel:</Run> ¡Listo! Esperando al resto.</TextBlock>
                        </StackPanel>
                    </ScrollViewer>
                    <Grid Grid.Row="2" Margin="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Style="{StaticResource ModernTextBoxStyle}" Text="Escribe un mensaje..." Foreground="#888" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
                        <Button Grid.Column="1" Content="➤" ToolTip="Enviar" FontSize="20" Background="Transparent" Foreground="{StaticResource PrimaryAccentBrush}" BorderThickness="0" Margin="5,0,0,0"/>
                    </Grid>
                </Grid>
            </Border>

            <Border Style="{StaticResource FloatingPanelStyle}">
                <StackPanel Margin="15">
                    <TextBlock Text="Invitar Amigo" FontSize="18" FontWeight="Bold" Foreground="{StaticResource DarkTextBrush}" Margin="0,0,0,10"/>
                    <TextBox Style="{StaticResource ModernTextBoxStyle}" Text="correo@ejemplo.com" Foreground="#888" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
                    <Button Content="✉️  Enviar Invitación" Style="{StaticResource SecondaryButtonStyle}" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,15,10">
            <Button Content="Salir de la Partida" Style="{StaticResource DestructiveButtonStyle}"/>
            <Button Content="Iniciar Partida" Style="{StaticResource PrimaryButtonStyle}" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
