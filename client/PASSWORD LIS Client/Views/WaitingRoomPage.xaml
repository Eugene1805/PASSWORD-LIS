<Page x:Class="PASSWORD_LIS_Client.Views.WaitingRoomPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PASSWORD_LIS_Client.Views"
      xmlns:converters="clr-namespace:PASSWORD_LIS_Client.Converters"
      xmlns:utils="clr-namespace:PASSWORD_LIS_Client.Utils"
      xmlns:language="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WaitingRoomPage">
    <Page.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisConverter" />
        <converters:AvatarIdToImageConverter x:Key="AvatarIdToImageConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/wallpaperWaitingRoom.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock x:Name="titleTextBlock" Style="{StaticResource titleTextBlockStyle}"
                   Grid.ColumnSpan="3" 
                   Text="PASSWORD LIS" HorizontalAlignment="Center"
                    VerticalAlignment="Top" Margin="10,15,10,10"/>
        <Button Command="{Binding LeaveRoomCommand}"
                Style="{StaticResource circleButtonStyle}"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Width="40" Height="40" Margin="20">
            <Image Source="/Resources/GoBackIcon.png" Width="25" Height="25"/>
        </Button>
        
        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource floatingBorderStyle}" Margin="10,90,10,20" Padding="15"
                Visibility="{Binding IsGuest, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Style="{StaticResource subtitleTextBlockStyle}"
                       Text="{utils:Translate inviteYourFriendsText}"
                               TextWrapping="Wrap"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"/>

                    <Button Grid.Column="1" Style="{StaticResource circleButtonStyle}"
                            Width="45" Height="45" VerticalAlignment="Center" HorizontalAlignment="Right"
                            Command="{Binding InviteFriendCommand}">
                        <Image Source="/Resources/invitationIcon.png" Width="20" Height="20"/>
                    </Button>
                </Grid>

                <Border Grid.Row="1" Style="{StaticResource floatingBorderStyle}" Margin="0,10,0,10" Padding="5"> 
                    <Grid>
                        <ProgressBar IsIndeterminate="True"
                                     Style="{StaticResource circularProgressBar}"
                                     Visibility="{Binding IsLoadingFriends, Converter={StaticResource BoolToVisConverter}}"
                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        <TextBlock Text="{utils:Translate noFriendsAddOneText}"
                                   Style="{StaticResource subtitleTextBlockStyle}" Opacity="0.6"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   TextWrapping="Wrap" TextAlignment="Center"
                                   Visibility="{Binding ShowNoFriendsMessage, Converter={StaticResource BoolToVisConverter}}"/>

                        <ListView ItemsSource="{Binding Friends}"
                                  SelectedItem="{Binding SelectedFriend, Mode=TwoWay}"
                                  Background="Transparent" BorderThickness="0"
                                  Visibility="{Binding IsLoadingFriends, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                            <ListView.Style>
                                <Style TargetType="ListView">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ShowNoFriendsMessage}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ListView.Style>

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Nickname}" Margin="5"
                                               Style="{StaticResource bodyTextBlockStyle}" TextAlignment="Left"/>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Border>

                <Button Grid.Row="2" Style="{StaticResource primaryButtonStyle}"
                        Content="{utils:Translate invitationMailText}"
                        Command="{Binding InviteByMailCommand}" Height="40" />
            </Grid>
        </Border>

        <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource floatingBorderStyle}" Margin="10,90,10,10" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel  Grid.Row="0" Orientation="Horizontal">
                    <TextBlock Style="{StaticResource subtitleTextBlockStyle}" Width="150"
                        Text="{utils:Translate playersInTheRoomText}" HorizontalAlignment="Left" TextWrapping="Wrap"
                        VerticalAlignment="Center"/>
                    <Button Style="{StaticResource circleButtonStyle}" VerticalAlignment="Top"
                            Width="50" Height="50" HorizontalAlignment="Right" Margin="140,5,0,0"
                            Command="{Binding ReportCommand}">
                        <Image Source="/Resources/ReportIcon.png" Width="30" Height="30" />
                    </Button>
                </StackPanel>
                
                <Border Grid.Row="1"  Margin="0,10,0,0" Padding="5">
                    <ListBox ItemsSource="{Binding ConnectedPlayers}" SelectedItem="{Binding SelectedPlayer, Mode=TwoWay}" BorderThickness="0" Background="Transparent">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="5" Style ="{StaticResource teamsBorderStyle}"
                                        BorderThickness="3"
                                        CornerRadius="5"
                                        Padding="5">    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Image Grid.Column="0" Source="{Binding PhotoId, Converter={StaticResource AvatarIdToImageConverter}, FallbackValue={StaticResource DefaultAvatarImage}}" 
                                                Width="110" Height="110" Margin="0,0,10,0" />

                                        <TextBlock Grid.Column="1" Style="{StaticResource subtitleTextBlockStyle}" 
                                                   Text="{Binding Nickname}" 
                                                   TextWrapping="WrapWithOverflow" 
                                                   VerticalAlignment="Center"/>

                                        <TextBlock Grid.Column="2" Style="{StaticResource bodyTextBlockStyle}" 
                                                   Text="{Binding Role}" 
                                                   VerticalAlignment="Bottom"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>
            </Grid>
        </Border>


        <Border Grid.Row="0" Grid.Column="2" Style="{StaticResource chatBorderStyle}" Margin="10,90,10,10" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Style="{StaticResource subtitleTextBlockStyle}"
                           Text="{utils:Translate groupChatText}"
                           TextAlignment="Left"/>

                <Border Grid.Row="1" Style="{StaticResource floatingBorderStyle}" Padding="10" Margin="0,10,0,10">
                    <ScrollViewer VerticalScrollBarVisibility="Hidden" Background="Transparent" BorderBrush="White">
                        <ItemsControl ItemsSource="{Binding ChatMessages}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Style="{StaticResource bodyTextBlockStyle}" TextWrapping="Wrap"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="messageGroupChatTextBox" 
                             Text="{Binding CurrentMessage, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource primaryTextBoxStyle}" 
                             Grid.Column="0" MaxLength="250" 
                             Height="40">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SendMessageCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                    <Button Grid.Column="1" Margin="10,0,0,0"
                            Command="{Binding SendMessageCommand}"
                            Style="{StaticResource circleButtonStyle}" 
                              Width="50" Height="50">
                        <Image Source="/Resources/sendIcon.png" Width="20" Height="20"/>
                    </Button>
                </Grid>
            </Grid>
        </Border>
        <Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Style="{StaticResource floatingBorderStyle}" Padding="15" Margin="10,10,10,20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Style="{StaticResource subtitleTextBlockStyle}" 
                               Text="{utils:Translate codeWordText}" 
                               VerticalAlignment="Center" Margin="5"/>
                <TextBlock x:Name="codeGeneratedTextBlock" Style="{StaticResource titleTextBlockStyle}"
                               Text="{Binding GameCode}"
                               VerticalAlignment="Center" Margin="5"/>
                <Button Style="{StaticResource circleButtonStyle}"
                            Command="{Binding CopyGameCodeCommand}"
                            Width="60" Height="60"
                            VerticalAlignment="Center"
                            Margin="5,0,15,0"
                            ToolTip="{utils:Translate copyCodeText}">
                    <Image Source="/Resources/CopyIcon.png" Width="40" Height="40"/>
                </Button>
                <Ellipse Style="{StaticResource circleTransparentEllipseStyle}">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="/Resources/TeamIcon.png"/>
                    </Ellipse.Fill>
                </Ellipse>

                <TextBlock x:Name="playersInWaitingRoomTextBlock" 
                               Style="{StaticResource subtitleTextBlockStyle}" 
                               Text="{Binding PlayerCountText}" Margin="5,0,15,0"
                               VerticalAlignment="Center"/>
                <Button Style="{StaticResource gameButtonStyle}" 
                        Content="{utils:Translate startGameText}" 
                        HorizontalAlignment="Center"
                        Width="120"
                        Height="45"
                        Command="{Binding StartGameCommand}"
                        Visibility="{Binding IsHost, Converter={StaticResource BoolToVisConverter}}"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Grid.ColumnSpan="3"
                HorizontalAlignment="Center" VerticalAlignment="Bottom"
                Background="#323232" CornerRadius="5"
                Padding="15,10" Margin="20" Style="{StaticResource snackbarBorderStyle}"
                Visibility="{Binding IsSnackbarVisible, Converter={StaticResource BoolToVisConverter}}">
            <TextBlock Text="{Binding SnackbarMessage}" Foreground="White" FontSize="14"/>
        </Border>
    </Grid>
</Page>
