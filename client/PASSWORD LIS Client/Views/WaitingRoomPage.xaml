<Page x:Class="PASSWORD_LIS_Client.Views.WaitingRoomPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PASSWORD_LIS_Client.Views"
      xmlns:language="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WaitingRoomPage">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource floatingBorderStyle}" Margin="10,20,10,10" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Style="{StaticResource subtitleTextBlockStyle}"
                       Text="{x:Static language:Lang.inviteYourFriendsText}"
                       VerticalAlignment="Center"/>

                    <Button Grid.Column="1" Style="{StaticResource circleButtonStyle}"
                    Width="30" Height="30" VerticalAlignment="Center">
                        <Image Source="/Resources/invitationIcon.png" Width="15" Height="15"/>
                    </Button>
                </Grid>

                <Border Grid.Row="1" Style="{StaticResource floatingBorderStyle}" Margin="0,10,0,10" Padding="5">
                    <ListBox x:Name="friendsListBox" BorderThickness="0">
                        <ListBoxItem Content="Eugenio"/>
                        <ListBoxItem Content="Uriel"/>
                        <ListBoxItem Content="Miguel"/>
                        <ListBoxItem Content="Erickmel"/>
                        <ListBoxItem Content="Mauricio"/>
                        <ListBoxItem Content="Raziel"/>
                        <ListBoxItem Content="Yael"/>
                        <ListBoxItem Content="Abel"/>
                        
                    </ListBox>
                </Border>

                <Button Grid.Row="2" Style="{StaticResource primaryButtonStyle}"
                Content="{x:Static language:Lang.invitationMailText}" 
                Height="37" />
            </Grid>
        </Border>

        <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource floatingBorderStyle}" Margin="10,20,10,10" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Style="{StaticResource subtitleTextBlockStyle}"
                           Text="{x:Static language:Lang.groupChatText}"
                           TextAlignment="Left"/>

                <Border Grid.Row="1" Style="{StaticResource floatingBorderStyle}" Padding="10" Margin="0,10,0,10">
                    <ScrollViewer>
                        <ItemsControl ItemsSource="{Binding ChatMessages}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Style="{StaticResource bodyTextBlockStyle}" TextWrapping="Wrap"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="messageGroupChatTextBox" 
                             Text="{Binding CurrentMessage, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource primaryTextBoxStyle}" 
                             Grid.Column="0" 
                             Height="40"/>
                    <Button Grid.Column="1" Margin="10,0,0,0"
                            Command="{Binding SendMessageCommand}"
                            Style="{StaticResource circleButtonStyle}" 
                              Width="50" Height="50">
                        <Image Source="/Resources/sendIcon.png" Width="20" Height="20"/>
                    </Button>
                </Grid>
            </Grid>
        </Border>

        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource floatingBorderStyle}" Padding="15" Margin="20,10,20,20">
            <StackPanel HorizontalAlignment="Center">
                <Button Style="{StaticResource gameButtonStyle}" 
                        Content="{x:Static language:Lang.startGameText}" 
                        HorizontalAlignment="Center"
                        Width="100"
                        Height="40"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Style="{StaticResource subtitleTextBlockStyle}" 
                               Text="{x:Static language:Lang.codeWordText}" 
                               VerticalAlignment="Center" Margin="5"/>
                    <TextBlock x:Name="codeGeneratedTextBlock" Style="{StaticResource titleTextBlockStyle}"
                               Text="EXAMPLE"
                               VerticalAlignment="Center" Margin="5"/>
                    <Ellipse Style="{StaticResource circleTransparentEllipseStyle}">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Resources/TeamIcon.png"/>
                        </Ellipse.Fill>
                    </Ellipse>

                    <TextBlock x:Name="playersInWaitingRoomTextBlock" 
                               Style="{StaticResource subtitleTextBlockStyle}" 
                               Text="EXAMPLE"  
                               VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
    </Grid>
</Page>
