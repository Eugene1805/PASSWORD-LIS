<Page x:Class="PASSWORD_LIS_Client.Views.RoundValidationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PASSWORD_LIS_Client.Views"
      xmlns:language="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
      xmlns:utils="clr-namespace:PASSWORD_LIS_Client.Utils"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="a{x:Static language:Lang.roundValidationText}">

    <Grid Margin="20" Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{utils:Translate roundValidationText}"
                   Style="{StaticResource titleTextBlockStyle}"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,20"/>

        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="{utils:Translate currentWordText}" Style="{StaticResource subtitleTextBlockStyle}" Grid.Column="0"/>
            <TextBlock Text="{utils:Translate clueText}" Style="{StaticResource subtitleTextBlockStyle}" Grid.Column="1"/>
            <TextBlock Text="{utils:Translate sinonymsQuestionText}" Style="{StaticResource subtitleTextBlockStyle}" Grid.Column="2" TextWrapping="Wrap"/>
            <TextBlock Text="{utils:Translate oneMoreWordQuestionText}" Style="{StaticResource subtitleTextBlockStyle}" Grid.Column="3" TextWrapping="Wrap"/>
        </Grid>

        <StackPanel Grid.Row="2">

            <Grid Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Style="{StaticResource floatingBorderStyle}" Grid.Column="0" Height="30" Width="100" HorizontalAlignment="Center">
                    <TextBlock Text="Calidad" Style="{StaticResource subtitleTextBlockStyle}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>

                <ListBox Grid.Column="1" Height="60" Width="100" HorizontalAlignment="Center">
                    <ListBoxItem Content="Atributo"/>
                    <ListBoxItem Content="Buena"/>
                    <ListBoxItem Content="Excelencia"/>
                </ListBox>

                <CheckBox Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,0,0,0" IsChecked="False"/>

                <CheckBox Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,0,0,0" IsChecked="False"/>
            </Grid>

            <Grid Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Style="{StaticResource floatingBorderStyle}" Grid.Column="0" Height="30" Width="100" HorizontalAlignment="Center">
                    <TextBlock Text="Requisito" Style="{StaticResource subtitleTextBlockStyle}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>

                <ListBox Grid.Column="1" Height="60" Width="100" HorizontalAlignment="Center">
                    <ListBoxItem Content="Fase"/>
                    <ListBoxItem Content="Necesario"/>
                    <ListBoxItem Content="Condición"/>
                </ListBox>

                <CheckBox Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,0,0,0" IsChecked="True"/>

                <CheckBox Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,0,0,0" IsChecked="False"/>
            </Grid>
        </StackPanel>

        <Button Content="{utils:Translate nextRoundText}"
                Grid.Row="3"
                Grid.ColumnSpan="2"
                Style="{StaticResource primaryButtonStyle}"
                Width="100"
                Height="30"
                HorizontalAlignment="Right"
                Margin="0,20,20,20"
                />

    </Grid>
</Page>
