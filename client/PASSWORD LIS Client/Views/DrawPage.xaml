<Page x:Class="PASSWORD_LIS_Client.Views.DrawPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PASSWORD_LIS_Client.Views"
      xmlns:utils="clr-namespace:PASSWORD_LIS_Client.Utils"
      xmlns:language="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DrawPage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/wallpaperDraw.png" Stretch="Fill"/>
        </Grid.Background>
        <TextBlock Text="{utils:Translate drawMessageText}" Style="{StaticResource endGameTitleTextBlockStyle}" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Width="597"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,166,0,0">
            <TextBlock Style="{StaticResource endGameTextTextBlockStyle}"
                       Text="{utils:Translate finalScoreTeamsText}"/>
            <TextBlock Text="{Binding RedTeamScore}" Style="{StaticResource endGameScoreTextBlockStyle}"
                       Margin="0,10,0,0"/>
            <TextBlock Text="{Binding BlueTeamScore}" Style="{StaticResource endGameScoreTextBlockStyle}"
                       Margin="0,10,0,0"/>
        </StackPanel>

        <Button Content="{utils:Translate backToLobbyText}" Style="{StaticResource endGameButtonStyle}" HorizontalAlignment="Center" 
                VerticalAlignment="Top" Margin="0,400,0,0" Width="150" Height="40"
                Command="{Binding BackToLobbyCommand}"/>
    </Grid>
</Page>
