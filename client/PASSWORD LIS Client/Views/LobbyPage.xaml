<Page x:Class="PASSWORD_LIS_Client.Views.LobbyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:language="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
      xmlns:local="clr-namespace:PASSWORD_LIS_Client.Views"
      xmlns:viewModels="clr-namespace:PASSWORD_LIS_Client.ViewModels"
      xmlns:converters="clr-namespace:PASSWORD_LIS_Client.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      MinHeight="450" MinWidth="800"
      Loaded="LobbyPageLoaded"
      KeepAlive="True"
      Title="LobbyPage"> <!--Cambiar titulo a internalizacion-->
     
    <Page.Resources>
        <converters:AvatarIdToImageConverter x:Key="AvatarIdToImageConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibility"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>

    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Style="{StaticResource floatingBorderStyle}" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Button Grid.Row="0" Style="{StaticResource circleButtonStyle}"
                    HorizontalAlignment="Left" VerticalAlignment="Top" 
                    Command="{Binding NavigateToProfileCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Page}}"
                    IsEnabled="{Binding IsGuest, Converter={StaticResource InverseBooleanConverter}}">
    
                    <Ellipse Style="{StaticResource circleTransparentEllipseStyle}" Width="90" Height="90">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="{Binding PhotoId, Converter={StaticResource AvatarIdToImageConverter}, FallbackValue={StaticResource DefaultAvatarImage}}"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </Button>
                <Grid Grid.Row="1" Visibility="{Binding IsGuest, Converter={StaticResource InverseBooleanToVisibility}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Style="{StaticResource bodyTextBlockStyle}"
                           Text="{x:Static language:Lang.friendsListText}"
                           VerticalAlignment="Center"
                           TextAlignment="Left"/>
                    
                    <Button Grid.Column="1" Style="{StaticResource circleButtonStyle}"
                        Width="30" Height="30" VerticalAlignment="Top" 
                        Command="{Binding ViewFriendRequestsCommand}">
                        <Image Source="/Resources/MailBoxIcon.png" Width="15" Height="15"/>
                    </Button>                    
                    
                    <Button Grid.Column="2" Style="{StaticResource circleButtonStyle}"
                        Width="30" Height="30" VerticalAlignment="Top" 
                        Command="{Binding AddFriendCommand}">
                        <Image Source="/Resources/AddFriendIcon.png" Width="15" Height="15"/>
                    </Button>
                    <Button Grid.Column="3" Style="{StaticResource circleButtonStyle}"
                        Width="30" Height="30" VerticalAlignment="Center" 
                        Command="{Binding DeleteFriendCommand}">
                        <Image Source="/Resources/DeleteFriendIcon.png" Width="15" Height="15"/>
                    </Button>
                </Grid>

                <Border Grid.Row="2" Style ="{StaticResource floatingBorderStyle}" Margin="0,5,0,5"
                    Visibility="{Binding IsGuest, Converter={StaticResource InverseBooleanToVisibility}}">
                    <Grid>
                        <TextBlock Text="Cargando amigos ..." Style="{StaticResource bodyTextBlockStyle}"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Visibility="{Binding IsLoadingFriends, Converter= {StaticResource BooleanToVisibilityConverter}}"/>

                        <ListView ItemsSource="{Binding Friends}"
                                  Background="Transparent" BorderThickness="0"
                                  Visibility="{Binding IsLoadingFriends, Converter={StaticResource InverseBooleanToVisibility}}"
                                  SelectedItem="{Binding SelectedFriend, Mode=TwoWay}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Nickname}" Margin="5"
                                               Style="{StaticResource bodyTextBlockStyle}" TextAlignment="Left"/>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Border>

                <StackPanel Grid.Row="3">
                    <Button Content="{x:Static language:Lang.topPlayersText}" 
                        Style="{StaticResource primaryButtonStyle}"
                        Height="35" Margin="0,5"
                        Command="{Binding ShowTopPlayersCommand}"/>

                    <Button Content="{x:Static language:Lang.howToPlayText}" 
                        Style="{StaticResource primaryButtonStyle}"
                        Height="35" Margin="0,5"
                        Command="{Binding HowToPlayCommand}"/>
                    
                    <Button Content="{x:Static language:Lang.settingsText}" 
                        Style="{StaticResource primaryButtonStyle}"
                        Height="35" Margin="0,5"
                        Command="{Binding SettingsCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Style="{StaticResource floatingBorderStyle}" Padding="15">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="PASSWORD" Style="{StaticResource titleTextBlockStyle}"  Margin="0,0,0,20"/>
                    <Button Content="{x:Static language:Lang.playText}"
                        Style="{StaticResource gameButtonStyle}"
                        Height="30"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="1" Style="{StaticResource floatingBorderStyle}" Padding="15">
                <StackPanel>
                    <TextBlock Text="{x:Static language:Lang.enterCodeToJoinText}" 
                           Style="{StaticResource subtitleTextBlockStyle}" 
                           Margin="0,0,0,10"/>
                    <TextBox x:Name="codeJoinTextBox" 
                         Style="{StaticResource primaryTextBoxStyle}" 
                         Height="40" Margin="0,0,0,10"/>
                    <Button Content="{x:Static language:Lang.joingGameText}" 
                        Style="{StaticResource primaryButtonStyle}" 
                        Command="{Binding JoinGameCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Page}}"
                        Height="35"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
    
</Page>