<Window x:Class="PASSWORD_LIS_Client.Views.VerifyCodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PASSWORD_LIS_Client.Views"
        xmlns:viewModels="clr-namespace:PASSWORD_LIS_Client.ViewModels"
        xmlns:utils="clr-namespace:PASSWORD_LIS_Client.Utils"
        xmlns:language="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        MinHeight="400" MinWidth="400"
        Title="{x:Static language:Lang.verifyCodeText}" Height="600" Width="600">
    <Window.Resources>
        <Style TargetType="Hyperlink">
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="Gray"/>
                    <Setter Property="TextDecorations" Value="None"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/BackgroudImage.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="2" Margin="10" VerticalAlignment="Center">
            <TextBlock Text="{x:Static language:Lang.verifyCodeMessageText}" 
                   Style="{StaticResource titleTextBlockStyle}" 
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>
            <TextBlock x:Name="emailTextblock"  FontSize="16" TextWrapping="Wrap"
                    HorizontalAlignment="Center" FontWeight="Bold" FontFamily="Consolas"
                    Margin="0,0,0,20" Height="50" Width="200"/>

            <TextBox x:Name="verificationCodeTextBox"  MaxLength="6"
                     Text="{Binding EnteredCode, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource primaryTextBoxStyle}" Width="220"/>
            <Button x:Name="verifyCodeButton"
                Content="{x:Static language:Lang.verifyCodeText}" 
                Style="{StaticResource LoadingButtonStyle}"
                utils:ButtonProperties.IsBusy="{Binding IsBusy}"
                Width="180" 
                Height="35" 
                Margin="0,15,0,10"
                HorizontalAlignment="Center" FontSize="14"
                Command="{Binding VerifyCodeCommand}"
                />
            <TextBlock Text="{x:Static language:Lang.verifyCodeNotSendText}" Style="{StaticResource bodyTextBlockStyle}"
                   HorizontalAlignment="Center"/>
            <TextBlock Style="{StaticResource bodyTextBlockStyle}"
                    TextWrapping="Wrap"
                    HorizontalAlignment="Center">
                    <Hyperlink x:Name="resendCodeHyperlink" Command="{Binding ResendCodeCommand}"> 
                        <Run Text="{x:Static language:Lang.verifyCodeResendCodeText}"/>
                    </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
