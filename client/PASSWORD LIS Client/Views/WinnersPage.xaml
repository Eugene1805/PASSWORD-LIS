<Page x:Class="PASSWORD_LIS_Client.Views.WinnersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PASSWORD_LIS_Client.Views"
      xmlns:utils="clr-namespace:PASSWORD_LIS_Client.Utils"
      xmlns:language="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="{utils:Translate winnersText}">

    <Grid Background="Black">
        <TextBlock Text="{utils:Translate winnersMessageText}" Style="{StaticResource titleTextBlockStyle}" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,40,0,0"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,40">
            <TextBlock Style="{StaticResource subtitleTextBlockStyle}"
                       Text="Final Score:" Margin="0,0,0,20" />
            <TextBlock Text="{Binding RedTeamScore}" Style="{StaticResource subtitleTextBlockStyle}"
                       Margin="0,10,0,0"/>
            <TextBlock Text="{Binding BlueTeamScore}" Style="{StaticResource subtitleTextBlockStyle}"
                       Margin="0,10,0,0"/>
        </StackPanel>

        <TextBlock Text="{utils:Translate successfulPasswordsText}" Style="{StaticResource subtitleTextBlockStyle}"
               HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,80,0,0"/>
        
        <Button Content="{utils:Translate backToLobbyText}" Style="{StaticResource primaryButtonStyle}" HorizontalAlignment="Center" 
                VerticalAlignment="Top" Margin="0,350,0,0" Width="125" Height="40"
                Command="{Binding BackToLobbyCommand}"/>
    </Grid>
</Page>
