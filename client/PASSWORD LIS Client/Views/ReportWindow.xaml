<Window x:Class="PASSWORD_LIS_Client.Views.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PASSWORD_LIS_Client.Views"
        xmlns:util="clr-namespace:PASSWORD_LIS_Client.Utils"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="ReportWindow" Height="350" Width="400">
    <Grid Background="#55000000">
        <Border Style="{StaticResource floatingBorderStyle}">
            <StackPanel>
                <TextBlock Style="{StaticResource titleTextBlockStyle}" Text="{Binding TitleMessage}" Margin="0,10,0,0"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   FontSize="16"/>
                <TextBox Width="300" MaxLength="200"
                 Height="150" Margin="0,20,0,15"
                 HorizontalAlignment="Center" 
                 VerticalAlignment="Center"
                 Text="{Binding ReportReason, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource reportTextBoxStyle}" 
                 />
                <Button Content="{util:Translate generateReportText}" 
                    Width="150" 
                    Height="40"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Bottom"
                    Style="{StaticResource primaryButtonStyle}"
                    Command="{Binding SubmitReportCommand}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
