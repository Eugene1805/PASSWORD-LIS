<Page x:Class="PASSWORD_LIS_Client.Views.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PASSWORD_LIS_Client.Views"
      xmlns:vms="clr-namespace:PASSWORD_LIS_Client.ViewModels"
      xmlns:lang="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
      xmlns:gameRef="clr-namespace:PASSWORD_LIS_Client.GameManagerServiceReference"
      xmlns:converters="clr-namespace:PASSWORD_LIS_Client.Converters"
      xmlns:language="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
      xmlns:utils="clr-namespace:PASSWORD_LIS_Client.Utils"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance Type=vms:BaseViewModel, IsDesignTimeCreatable=False}"
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="GamePage">
    
        <Page.Resources>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        </Page.Resources>

    <Grid>
        <Border Background="#99000000" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="{utils:Translate waitingOtherPlayersText}"
                           Foreground="White" FontSize="32" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <Frame x:Name="gameContentFrame" NavigationUIVisibility="Hidden" Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
            <Frame.Style>
                <Style TargetType="Frame">
                    <Setter Property="Content" Value="{x:Null}" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding CurrentPlayerRole}" Value="{x:Static gameRef:PlayerRole.ClueGuy}">
                            <Setter Property="Source" Value="ClueGuyPage.xaml"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding CurrentPlayerRole}" Value="{x:Static gameRef:PlayerRole.Guesser}">
                            <Setter Property="Source" Value="GuesserPage.xaml"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Frame.Style>
        </Frame>
    </Grid>
</Page>
