<Window x:Class="PASSWORD_LIS_Client.Views.AddFriendWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PASSWORD_LIS_Client.Views"
        xmlns:utils="clr-namespace:PASSWORD_LIS_Client.Utils"
        xmlns:language="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
        mc:Ignorable="d"
        Title="{utils:Translate addFriendTitleText}" Height="260" Width="500"
        WindowStartupLocation="CenterScreen">
   
    <Grid>
        <Border Padding="20">
            <StackPanel>
                <TextBlock Style="{StaticResource subtitleBlackTextBlockStyle}" Margin="20,20,20,10"
                   Text="{utils:Translate enterFriendEmailToAddText}"/>
                
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource primaryTextBoxStyle}" Margin="20,10,20,10"/>

                <TextBlock Text="{Binding EmailError}"
                           Style="{StaticResource errorTextBlockStyle}"
                           Margin="25,0,20,5"/>
                
                <Button Style="{StaticResource primaryButtonStyle}" 
                        Margin="20,15,20,20" Height="30"
                        Content="{utils:Translate sendFriendRequestText}"
                        Command="{Binding SendRequestCommand}"/>
            </StackPanel>
        </Border>

    </Grid>
    
</Window>
