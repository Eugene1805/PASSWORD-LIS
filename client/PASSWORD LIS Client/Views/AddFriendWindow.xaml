<Window x:Class="PASSWORD_LIS_Client.Views.AddFriendWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PASSWORD_LIS_Client.Views"
        xmlns:language="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
        mc:Ignorable="d"
        Title="AddFriendWindow" Height="250" Width="500">
    <Grid>
        <Border Style="{StaticResource floatingBorderStyle}">
            <StackPanel>
                <TextBlock Style="{StaticResource subtitleTextBlockStyle}" Margin="20,20,20,10"
                   Text="{x:Static language:Lang.enterFriendEmailToAddText}"/>
                <TextBox x:Name="emailFriendTextBox"
                 Style="{StaticResource primaryTextBoxStyle}" Margin="20,10,20,10"/>
                <Button Style="{StaticResource primaryButtonStyle}" Margin="20,15,20,20" Height="30"
                Content="{x:Static language:Lang.sendFriendRequestText}"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
