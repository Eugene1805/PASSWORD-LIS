<Window x:Class="PASSWORD_LIS_Client.Views.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PASSWORD_LIS_Client.Views"
        xmlns:viewModels="clr-namespace:PASSWORD_LIS_Client.ViewModels"
        xmlns:utils="clr-namespace:PASSWORD_LIS_Client.Utils"
        xmlns:converters="clr-namespace:PASSWORD_LIS_Client.Converters"
        xmlns:language="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        MinHeight="400" MinWidth="400"
        Title="{utils:Translate changePasswordText}" Height="600" Width="600">
    <Window.DataContext>
        <viewModels:ChangePasswordViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/BackgroudImage.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="{utils:Translate changePasswordText}" 
                   Style="{StaticResource titleBlackTextBlockStyle}"  
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>
                <TextBlock Text="{utils:Translate userPasswordText}"
                           Style="{StaticResource subtitleBlackTextBlockStyle}"
                           HorizontalAlignment="Left"/>
                <PasswordBox x:Name="newPasswordBox" Style="{StaticResource passwordboxStyle}" 
                             Width="200" Margin="0,10,10,10"
                             utils:PasswordBoxHelper.BindPassword="True"
                             utils:PasswordBoxHelper.BoundPassword="{Binding NewPassword,
                                        Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             HorizontalAlignment="Center"/>

                <TextBlock Text="{utils:Translate confirmUserPasswordText}"
                           Style="{StaticResource subtitleBlackTextBlockStyle}"
                           HorizontalAlignment="Left"/>
                <PasswordBox x:Name="confirmNewPasswordBox" 
                             Style="{StaticResource passwordboxStyle}" 
                             utils:PasswordBoxHelper.BindPassword="True"
                             utils:PasswordBoxHelper.BoundPassword="{Binding ConfirmPassword,
                                            Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Width="200" Margin="0,10,10,10"
                             HorizontalAlignment="Center"/>
                <Button x:Name="changePasswordButton"
                Content="{utils:Translate changePasswordText}" 
                Style="{StaticResource LoadingButtonStyle}"
                utils:ButtonProperties.IsBusy="{Binding IsBusy}"
                Width="180" 
                Height="35" 
                Margin="0,15,0,10" 
                HorizontalAlignment="Center"
                Command ="{Binding ChangePasswordCommand}"
                 />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
