<Page x:Class="PASSWORD_LIS_Client.Views.LosersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PASSWORD_LIS_Client.Views"
      xmlns:utils="clr-namespace:PASSWORD_LIS_Client.Utils"
      xmlns:language="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="{utils:Translate loosersText}">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/wallpaperLosers.png" AlignmentX="Left" Stretch="UniformToFill"/>
        </Grid.Background>

        <TextBlock Text="{utils:Translate loosersMessageText}" Style="{StaticResource endGameTitleTextBlockStyle}" HorizontalAlignment="Center"
               VerticalAlignment="Top" FontSize="24" Margin="0,10,0,0"/>

        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,50,150">
            <TextBlock Style="{StaticResource endGameTextTextBlockStyle}"
                       Text="{utils:Translate finalScoreTeamsText}" TextWrapping="Wrap"/>
            <TextBlock Text="{Binding RedTeamScore}" Style="{StaticResource endGameScoreTextBlockStyle}"
                       Margin="0,10,0,0"/>
            <TextBlock Text="{Binding BlueTeamScore}" Style="{StaticResource endGameScoreTextBlockStyle}"
                       Margin="0,10,0,0"/>
        </StackPanel>

        <Button Content="{utils:Translate backToLobbyText}" Style="{StaticResource endGameButtonStyle}" HorizontalAlignment="Left"
                VerticalAlignment="Top" Margin="665,379,0,0" Width="125" Height="40"
                Command="{Binding BackToLobbyCommand}" />
    </Grid>
</Page>
