<Page x:Class="PASSWORD_LIS_Client.Views.LosersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PASSWORD_LIS_Client.Views"
      xmlns:utils="clr-namespace:PASSWORD_LIS_Client.Utils"
      xmlns:language="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="{utils:Translate loosersText}">

    <Grid Background="Black">
        <TextBlock Text="{utils:Translate loosersMessageText}" Style="{StaticResource titleTextBlockStyle}" HorizontalAlignment="Center"
               VerticalAlignment="Top" FontSize="24" Margin="0,40,0,0"/>
        <TextBlock Text="{utils:Translate redTeamText}" Style="{StaticResource subtitleTextBlockStyle}" HorizontalAlignment="Center" 
               VerticalAlignment="Top" Margin="0,150,0,0"/>
        <TextBlock Text="{utils:Translate successfulPasswordsText}" Style="{StaticResource subtitleTextBlockStyle}" HorizontalAlignment="Center"
               VerticalAlignment="Center" Margin="0,80,0,0"/>
        <Button Content="{utils:Translate playAgainText}" Style="{StaticResource gameButtonStyle}" HorizontalAlignment="Center"
                VerticalAlignment="Top" Margin="0,360,0,0" Click="ButtonClickPlayAgain" Width="125" Height="40"/>
        <Button Content="{utils:Translate backToLobbyText}" Style="{StaticResource primaryButtonStyle}" HorizontalAlignment="Right"
                VerticalAlignment="Top" Margin="0,30,50,0" Click="ButtonClickBackToLobby" Width="125" Height="40"/>
    </Grid>
</Page>
