<Page x:Class="PASSWORD_LIS_Client.Views.ClueGuyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PASSWORD_LIS_Client.Views"
      xmlns:utils="clr-namespace:PASSWORD_LIS_Client.Utils"
      xmlns:language="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
      xmlns:converters="clr-namespace:PASSWORD_LIS_Client.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="{x:Static language:Lang.clueGuyText}">
    
    <Page.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/wallpaperClueGuy.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Border Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource floatingBorderStyle}">
            <StackPanel>
                <TextBlock Style="{StaticResource subtitleTextBlockStyle}" Margin="20,40,20,20"
                           Text="{Binding TeamName}"/>

                <TextBlock Style="{StaticResource bodyTextBlockStyle}" Margin="20"
                           Text="{Binding CurrentRoundText}"/>

                <TextBlock Style="{StaticResource bodyTextBlockStyle}" Margin="20"
                           Text="{Binding CurrentWordCountText}"
                           Visibility="{Binding IsSuddenDeathVisible, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>

                <TextBlock Style="{StaticResource bodyTextBlockStyle}" Margin="20"
                           Text="{Binding TeamPointsText}"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource floatingBorderStyle}" Margin="20">
            <StackPanel>
                <TextBlock Text="{utils:Translate suddenDeathTitleText}"
                           Style="{StaticResource titleTextBlockStyle}" Foreground="Red"
                           Visibility="{Binding IsSuddenDeathVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <TextBlock Style="{StaticResource titleTextBlockStyle}" 
                           Text="{utils:Translate clueGuyText}"
                           Margin="20" Cursor="Hand"/>
                <TextBlock Style="{StaticResource bodyTextBlockStyle}" Margin="20,0,20,20"
                           Text="{utils:Translate passwordToGuessText}"
                           TextWrapping="Wrap"/>
                <TextBlock x:Name="passwordToGuessTextBlock" Style="{StaticResource titleTextBlockStyle}" 
                           Text="{Binding CurrentPasswordWord}"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource floatingBorderStyle}" Padding="10" >
            <StackPanel>
                <TextBlock Style="{StaticResource bodyTextBlockStyle}" Margin="20,10"
                           Text="{utils:Translate writeClueText}"
                           TextWrapping="Wrap"/>
                <TextBox x:Name="clueGivenTextBox"
                         Style="{StaticResource primaryTextBoxStyle}" Margin="20,10"
                         Text="{Binding CurrentClueText, UpdateSourceTrigger=PropertyChanged}"
                         MaxLength="50"
                         IsEnabled="{Binding CanSendClue}"/>

                <Button Style="{StaticResource primaryButtonStyle}" Margin="20,10" Height="30"
                        Content="{utils:Translate sendText}"
                        Command="{Binding SubmitClueCommand}" />
            </StackPanel>
        </Border>

        <Border Grid.Column="2" Grid.RowSpan="2" Style="{StaticResource floatingBorderStyle}">
            <StackPanel>
                <Grid Width="101" Height="107" Margin="20">
                    <Ellipse Style="{StaticResource circleEllipseStyle}" Fill="Transparent"/>
                    <TextBlock Style="{StaticResource titleTextBlockStyle}"
                               x:Name="timerTextBlock"
                               Text="{Binding TimerSeconds}"
                               FontSize="28"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </Grid>
                <Button Style="{StaticResource gameButtonStyle}"
                        Margin="20" 
                        Height="35"
                        Content="{utils:Translate passText}"
                        Command="{Binding PassTurnCommand}"
                        IsEnabled="{Binding CanPassTurn}"/>
            </StackPanel>
        </Border>
        <Border Grid.RowSpan="2" Grid.ColumnSpan="3"
                HorizontalAlignment="Center" VerticalAlignment="Bottom"
                Background="#323232" CornerRadius="5"
                Padding="15,10" Margin="20" Style="{StaticResource snackbarBorderStyle}"
                Visibility="{Binding IsSnackbarVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock Text="{Binding SnackbarMessage}" Foreground="White" FontSize="14"/>
        </Border>
    </Grid>
</Page>
