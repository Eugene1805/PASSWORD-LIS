<Window x:Class="PASSWORD_LIS_Client.TopPlayersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PASSWORD_LIS_Client"
        mc:Ignorable="d"
        Title="TopPlayersWindow" Height="400" Width="300"
        Background="#EEEFF0">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="a{x:Static language:Lang.topPlayersText}" 
                   FontSize="24" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Foreground="#343A40"/>

        <DataGrid x:Name="topPlayersDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False">
            CanUserDeleteRows="False"
            CanUserReorderColumns="False"
            CanUserResizeColumns="True"
            CanUserSortColumns="False"
            SelectionMode="Single"
            HeadersVisibility="Column"
            BorderThickness="1"
                  BorderBrush="#66B2FF"
                  Background="#66B2FF">

            <DataGrid.Columns>
                <!-- Columna de Jugadores -->
                <DataGridTextColumn Header="a{x:Static language:Lang.playersText}" 
                                    Binding="{Binding Equipo}"
                                    Width="*"
                                    IsReadOnly="True"/>

                <!-- Columna de Puntos -->
                <DataGridTextColumn Header="a{x:Static language:Lang.scoreTopText}" 
                                    Binding="{Binding Puntos}"
                                    Width="120"
                                    IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
