<Window x:Class="PASSWORD_LIS_Client.TopPlayersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PASSWORD_LIS_Client"
        xmlns:language="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        MinHeight="350" MinWidth="350"
        Title="TopPlayersWindow" Height="350" Width="350"
        Loaded="TopPlayersWindowLoaded"
        Background="#EEEFF0">
    <Window.Resources>
        <local:NicknamesConverter x:Key="PlayerNicknamesConverter"/>
    </Window.Resources>
    <Grid>
        <Border Style="{StaticResource floatingBorderStyle}" Padding="15" Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="{x:Static language:Lang.topPlayersText}"
                           Style="{StaticResource titleTextBlockStyle}"
                           Margin="20,0,20,10"/>


                <DataGrid x:Name="topTeamsDataGrid" AutoGenerateColumns="False"
                          CanUserAddRows="False" RowDetailsVisibilityMode="Collapsed"
                          CanUserSortColumns="False" Grid.Row="1"
                          IsReadOnly="True" Style="{StaticResource cleanDataGridStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn HeaderStyle="{StaticResource cleanDataGridColumnHeaderStyle}" Header="Puntuación" Binding="{Binding Score}" Width="*"/>
                        <DataGridTextColumn HeaderStyle="{StaticResource cleanDataGridColumnHeaderStyle}" Header="Jugadores" Binding="{Binding PlayersNicknames, Converter={StaticResource PlayerNicknamesConverter}}" Width="2*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Window>
