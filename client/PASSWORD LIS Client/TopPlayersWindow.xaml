<Window x:Class="PASSWORD_LIS_Client.TopPlayersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PASSWORD_LIS_Client"
        xmlns:language="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
        mc:Ignorable="d"
        Title="TopPlayersWindow" Height="300" Width="300"
        Background="#EEEFF0">
    <Grid>
        <Border Style="{StaticResource floatingBorderStyle}" Padding="15" Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="{x:Static language:Lang.topPlayersText}"
                           Style="{StaticResource titleTextBlockStyle}"
                           Margin="20,0,20,10"/>


                <DataGrid x:Name="topPlayersDataGrid"
                          Grid.Row="1" >

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="{x:Static language:Lang.playersText}" 
                                            Binding="{Binding Equipo}"
                                            Width="*"
                                            MinWidth="150"/>

                        <DataGridTextColumn Header="{x:Static language:Lang.scoreTopText}" 
                                            Binding="{Binding Puntos}"
                                            Width="Auto"/>
                    </DataGrid.Columns>
                    <DataGrid.ItemsSource>
                        <x:Array Type="{x:Type local:PlayerScore}">
                            <local:PlayerScore Equipo="Arturo + Eugenio" Puntos="15" />
                            <local:PlayerScore Equipo="Uriel + Miguel" Puntos="10" />
                            <local:PlayerScore Equipo="Raziel + Abel" Puntos="9" />
                            <local:PlayerScore Equipo="Mauricio + Erickmel" Puntos="8" />
                            <local:PlayerScore Equipo="Carlos + Gabriel" Puntos="7" />
                        </x:Array>
                    </DataGrid.ItemsSource>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Window>
