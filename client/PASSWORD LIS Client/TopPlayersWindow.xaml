<Window x:Class="PASSWORD_LIS_Client.TopPlayersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PASSWORD_LIS_Client"
        mc:Ignorable="d"
        Title="TopPlayersWindow" Height="400" Width="300"
        Background="#EEEFF0">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="a{x:Static language:Lang.topPlayersText}" 
                   FontSize="24" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Foreground="#343A40"/>

        <!-- Tabla de solo lectura -->
        <DataGrid x:Name="PlayersDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"                   
            CanUserAddRows="False">
            <!-- No agregar filas -->
            CanUserDeleteRows="False"
            <!-- No eliminar filas -->
            CanUserReorderColumns="False"
            <!-- No reordenar columnas -->
            CanUserResizeColumns="True"
            <!-- Permitir ajustar ancho columnas -->
            CanUserSortColumns="False"
            <!-- No ordenar por columnas -->
            SelectionMode="Single"
            <!-- Solo selección simple -->
            HeadersVisibility="Column"
            <!-- Solo mostrar headers de columnas -->
            BorderThickness="1"
                  BorderBrush="#CCCCCC"
                  Background="White">

            <DataGrid.Columns>
                <!-- Columna de Jugadores -->
                <DataGridTextColumn Header="Jugadores" 
                                    Binding="{Binding Equipo}"
                                    Width="*"
                                    IsReadOnly="True"/>

                <!-- Columna de Puntos -->
                <DataGridTextColumn Header="Puntos" 
                                    Binding="{Binding Puntos}"
                                    Width="120"
                                    IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
