<Window x:Class="PASSWORD_LIS_Client.RetrievePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PASSWORD_LIS_Client"
        xmlns:language="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        MinHeight="400" MinWidth="400"
        Title="{x:Static language:Lang.retrieveUserPasswordText}" Height="450" Width="450">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Resources/BackgroudImage.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="2" Margin="10" VerticalAlignment="Center">
            <TextBlock Text="{x:Static language:Lang.retrieveUserPasswordText}" 
                   Style="{StaticResource titleTextBlockStyle}"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>
            <TextBlock Text="{x:Static language:Lang.emailText}" Style="{StaticResource subtitleTextBlockStyle}"
                           HorizontalAlignment="Left"/>
            <TextBox x:Name="emailTextBox" Style="{StaticResource primaryTextBoxStyle}" Width="190" Margin="0,10,10,0"/>
            <Button x:Name="sendCodeButton"
                Content="{x:Static language:Lang.sendCodeText}" 
                Style="{StaticResource primaryButtonStyle}" 
                Width="190" 
                Height="40" 
                Margin="0,15,0,10" 
                HorizontalAlignment="Center"
                Click="ButtonClickSendCode"/>
        </StackPanel>
    </Grid>
</Window>
