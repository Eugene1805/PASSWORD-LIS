<Window x:Class="PASSWORD_LIS_Client.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PASSWORD_LIS_Client"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="250" Width="400"
        Background="#EEEFF0">
    <Grid>
        <Label Content="a{x:Static language:Lang.musicText}"
               FontSize="20" 
               FontWeight="Bold" 
               HorizontalAlignment="Left"  
               Foreground="#343A40" Margin="17,37,0,136" Width="112" 
               FontFamily="Sans Serif Collection"/>
        <Slider x:Name="musicLevelSlider"
                HorizontalAlignment="Left" 
                Margin="212,56,0,0" 
                VerticalAlignment="Top" 
                Width="163" 
                Height="25"/>
        <Label Content="a{x:Static language:Lang.soundEffectsText}"
                FontSize="20" 
                FontWeight="Bold" 
                HorizontalAlignment="Left"  
                Foreground="#343A40" Margin="17,103,0,79" Width="112" 
                FontFamily="Sans Serif Collection"/>
        <Slider x:Name="soundEffectsLevelSlider" 
            HorizontalAlignment="Left" 
            Margin="212,124,0,0" 
            VerticalAlignment="Top" 
            Width="163" 
            Height="25"/>
        <Button Content="a{x:Static language:Lang.logOutText}" 
                    Width="180" Height="35"
                    FontSize="14"
                    Margin="120,183,0,16"
                    FontFamily="Sans Serif Collection"
                    FontWeight="Bold"
                    HorizontalAlignment="Left" 
                    Background="#FF6B6B" BorderBrush="#FF6B6B" Foreground="White">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</Window>
