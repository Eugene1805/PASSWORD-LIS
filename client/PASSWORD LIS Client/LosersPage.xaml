<Page x:Class="PASSWORD_LIS_Client.LosersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PASSWORD_LIS_Client"
      xmlns:language="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="{x:Static language:Lang.loosersText}">

    <Grid>
        <Label Content="{x:Static language:Lang.loosersMessageText}" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" Margin="0,43,0,0"/>
        <Label Content="{x:Static language:Lang.redTeamText}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,157,0,0"/>
        <Label Content="{x:Static language:Lang.successfulPasswordsText}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,80,0,0"/>
        <Button Content="{x:Static language:Lang.playAgainText}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="363,373,0,0" Click="GoBackButton_Click"/>
        <Button Content="{x:Static language:Lang.backToLobbyText}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,383,48,0" Click="NextButton_Click"/>
    </Grid>
</Page>
