<Window x:Class="PASSWORD_LIS_Client.View.PopUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PASSWORD_LIS_Client.View"
        xmlns:language="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d"
        Title="PopUpWindow" Height="150" Width="200">
    <Grid>
        <TextBlock x:Name="MessageTextBlock" Style="{StaticResource subtitleTextBlockStyle}" Text="This is a pop-up message!" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                    TextWrapping="Wrap"/>
    </Grid>
</Window>
