<Window x:Class="PASSWORD_LIS_Client.View.PopUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PASSWORD_LIS_Client.View"
        xmlns:language="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        mc:Ignorable="d"
        Title="PopUpWindow" Height="150" Width="300">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image x:Name="iconImage" Width="48" Height="48" Margin="0,0,20,0"/>

            <TextBlock x:Name="messageTextBlock" Style="{StaticResource subtitleTextBlockStyle}" Text="This is a pop-up message!"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       TextWrapping="Wrap"/>
        </StackPanel>
        
    </Grid>
</Window>
