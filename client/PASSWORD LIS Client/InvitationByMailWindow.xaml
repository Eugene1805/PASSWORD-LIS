<Window x:Class="PASSWORD_LIS_Client.InvitationByMailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PASSWORD_LIS_Client"
        mc:Ignorable="d"
        Title="InvitationByMailWindow" Height="225" Width="400">
    <Grid>
        <Border Style="{StaticResource floatingBorderStyle}">
            <StackPanel>
                <TextBlock Style="{StaticResource subtitleTextBlockStyle}" Margin="20,20,20,10"
                           Text="a{x:Static language:Lang.writeEmailToInviteText}"/>
                <TextBox x:Name="emailTextBox"
                         Style="{StaticResource primaryTextBoxStyle}" Margin="20,10,20,10"/>
                <Button Style="{StaticResource primaryButtonStyle}" Margin="20,15,20,20" Height="30"
                        Content="a{x:Static language:Lang.sendInvitationText}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
