<Window x:Class="PASSWORD_LIS_Client.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PASSWORD_LIS_Client"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        MinHeight="350" MinWidth="400"
        Title="ChangePasswordWindow" Height="350" Width="450">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/BackgroudImage.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20" HorizontalAlignment="Center">
                <TextBlock Text="a{x:Static language:Lang.changePasswordText}" 
                   FontSize="20"  
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>
                <Label Content="a{x:Static language:Lang.newUserPasswordText}"/>
                <PasswordBox x:Name="newPasswordBox" Width="160" Margin="0,10,10,0"/>
                <Label Content="a{x:Static language:Lang.confirmNewUserPasswordText}"/>
                <PasswordBox x:Name="confirmNewPasswordBox" Width="160" Margin="0,10,10,0"/>
                <Button Content="a{x:Static language:Lang.changePasswordButtonText}" 
                FontWeight="Bold" 
                Width="160" 
                Height="35" 
                Margin="0,15,0,10" 
                HorizontalAlignment="Center"
                />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
