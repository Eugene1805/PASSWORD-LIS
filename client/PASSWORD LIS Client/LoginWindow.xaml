<Window x:Class="PASSWORD_LIS_Client.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PASSWORD_LIS_Client"
        xmlns:language="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"        
        MinHeight="550" MinWidth="600"
        Title="{x:Static language:Lang.signUpText}" Height="550" Width="600">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/BackgroudImage.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <TextBlock Text="{x:Static language:Lang.createAccountText}" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

                <Label Content="{x:Static language:Lang.nameText}"/>
                <TextBox x:Name="firstNameTextBox" Width="250"/>

                <Label Content="{x:Static language:Lang.lastNameText}"/>
                <TextBox x:Name="lastNameTextBox" Width="250"/>

                <Label Content="{x:Static language:Lang.nicknameText}"/>
                <TextBox x:Name="nicknameTextBox" Width="250"/>

                <Label Content="{x:Static language:Lang.emailText}"/>
                <TextBox x:Name="emailTextBox" Width="250"/>

                <Label Content="{x:Static language:Lang.userPasswordText}"/>
                <PasswordBox x:Name="passwordBox" Width="250"/>

                <Label Content="{x:Static language:Lang.confirmUserPasswordText}"/>
                <PasswordBox x:Name="confirmPasswordBox" Width="250"/>

                <TextBlock TextWrapping="Wrap" Margin="0,10,0,0">
            <Hyperlink> 
                <Run Text="{x:Static language:Lang.termsAndConditionsText}"/>
            </Hyperlink>
                </TextBlock>

                <Button Content="{x:Static language:Lang.signUpText}" 
                FontWeight="Bold" 
                Width="250" 
                Height="35" 
                Margin="0,15,0,10" 
                HorizontalAlignment="Center"
                />

                <TextBlock TextWrapping="Wrap" 
                   TextAlignment="Center" 
                   FontSize="12" 
                   Foreground="Gray">
            <Run Text="{x:Static language:Lang.alreadyHaveAccountText}"/>
            <Hyperlink> 
                <Run Text="{x:Static language:Lang.logInText}"/>
            </Hyperlink>
            <LineBreak/>
            <Run Text="{x:Static language:Lang.codeActivationMessageText}"/>
                </TextBlock>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
