<Window x:Class="PASSWORD_LIS_Client.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PASSWORD_LIS_Client"
        xmlns:language="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"        
        MinHeight="450" MinWidth="500"
        Title="{x:Static language:Lang.logInText}" Height="450" Width="500">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Resources/BackgroudImage.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20" VerticalAlignment="Center">

                <TextBlock Text="{x:Static language:Lang.createAccountText}" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

                <Label Content="{x:Static language:Lang.emailText}"/>
                <TextBox x:Name="emailTextBox" Width="180"/>

                <Label Content="{x:Static language:Lang.userPasswordText}"/>
                <PasswordBox x:Name="passwordBox" Width="180"/>

                <TextBlock TextWrapping="Wrap" Margin="0,10,0,0" HorizontalAlignment="Right">
            <Hyperlink Click="HyperlinkClickForgotPassword"> 
                <Run Text="{x:Static language:Lang.forgotUserPasswordText}"/>
            </Hyperlink>
                </TextBlock>

                <Button Content="{x:Static language:Lang.logInText}" 
                FontWeight="Bold" 
                Width="180" 
                Height="35" 
                Margin="0,15,0,10" 
                HorizontalAlignment="Center"
                Click="ButtonClickLogin"
                />

                <TextBlock TextWrapping="Wrap" 
                   TextAlignment="Center" 
                   FontSize="12" 
                   Foreground="Gray">
            <Run Text="{x:Static language:Lang.noAccountText}"/>
            <Hyperlink Click="HyperlinkClickSignUp"> 
                <Run Text="{x:Static language:Lang.signUpText}"/>
            </Hyperlink>
                </TextBlock>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
