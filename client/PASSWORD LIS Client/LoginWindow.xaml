<Window x:Class="PASSWORD_LIS_Client.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PASSWORD_LIS_Client"
        xmlns:language="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"        
        MinHeight="400" MinWidth="400"
        Title="a{x:Static language:Lang.logInText}" Height="500" Width="500">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Resources/BackgroudImage.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="2" Margin="10" VerticalAlignment="Center">

            <TextBlock Text="{x:Static language:Lang.logInText}" 
                   Style="{StaticResource titleTextBlockStyle}" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

            <TextBlock Text="{x:Static language:Lang.emailText}" Style="{StaticResource subtitleTextBlockStyle}"
                       HorizontalAlignment="Left"/>
            <TextBox x:Name="emailTextBox" Style="{StaticResource primaryTextBoxStyle}" Width="210"/>

            <TextBlock Text="{x:Static language:Lang.userPasswordText}" Style="{StaticResource subtitleTextBlockStyle}"
                       HorizontalAlignment="Left"/>
            <PasswordBox x:Name="passwordBox" Style="{StaticResource passwordboxStyle}" Width="210"/>

            <TextBlock Style="{StaticResource bodyTextBlockStyle}" TextWrapping="Wrap" Margin="0,10,0,0" HorizontalAlignment="Right">
            <Hyperlink Click="HyperlinkClickForgotPassword"> 
                <Run Text="{x:Static language:Lang.forgotUserPasswordText}"/>
            </Hyperlink>
            </TextBlock>

            <Button Content="{x:Static language:Lang.logInText}" 
                Style="{StaticResource primaryButtonStyle}" 
                Width="210" 
                Height="40" 
                Margin="0,15,0,10" 
                HorizontalAlignment="Center"
                Click="ButtonClickLogin"
                />

            <Button Content="{x:Static language:Lang.playAsGuestText}" 
                Style="{StaticResource logOutButtonStyle}" 
                Width="210" 
                Height="40" 
                Margin="0,15,0,10" 
                HorizontalAlignment="Center"
                Click="PlayAsGuestButtonClick"
                />

            <TextBlock Style="{StaticResource bodyTextBlockStyle}" TextWrapping="Wrap" HorizontalAlignment="Center">
            <Run Text="{x:Static language:Lang.noAccountText}"/>
            <Hyperlink Click="HyperlinkClickSignUp"> 
                <Run Text="{x:Static language:Lang.signUpText}"/>
            </Hyperlink>
            </TextBlock>

        </StackPanel>
    </Grid>
</Window>
