<Page x:Class="PASSWORD_LIS_Client.WinnersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PASSWORD_LIS_Client"
      xmlns:language="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="a{x:Static language:Lang.winnersText}">

    <Grid Background="#F5F5F5">
        <TextBlock Text="{x:Static language:Lang.winnersMessageText}" Style="{StaticResource titleTextBlockStyle}" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,40,0,0"/>
        <TextBlock Text="{x:Static language:Lang.redTeamText}" Style="{StaticResource subtitleTextBlockStyle}"
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,150,0,0"/>
        <TextBlock Text="{x:Static language:Lang.successfulPasswordsText}" Style="{StaticResource subtitleTextBlockStyle}"
               HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,80,0,0"/>
        <Button Content="{x:Static language:Lang.playAgainText}" Style="{StaticResource gameButtonStyle}" HorizontalAlignment="Center" 
                VerticalAlignment="Top" Margin="0,360,0,0" Width="125" Height="40" Click="ButtonClickPlayAgain"/>
        <Button Content="{x:Static language:Lang.backToLobbyText}" Style="{StaticResource primaryButtonStyle}" HorizontalAlignment="Right" 
                VerticalAlignment="Top" Margin="0,30,50,0" Width="125" Height="40" Click="ButtonClickBackToLobby"/>
    </Grid>
</Page>
