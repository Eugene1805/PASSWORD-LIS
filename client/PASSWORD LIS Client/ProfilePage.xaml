<Page x:Class="PASSWORD_LIS_Client.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PASSWORD_LIS_Client"
      xmlns:language="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="a{x:Static language:Lang.userPasswordText}">

    <Grid Margin="20" Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Style="{StaticResource circleButtonStyle}"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="0,10,10,0" Width="50" Height="50"
                Click="BackToLobbyButtonClick">
            <Image Source="/Resources/GoBackIcon.png" Width="30" Stretch="Uniform"/>
        </Button>

        <TextBlock Text="{x:Static language:Lang.profileText}"
                   Style="{StaticResource titleTextBlockStyle}"
                   HorizontalAlignment="Center"
                   Grid.ColumnSpan="2"
                   Margin="0,10,0,20"/>

        <Button Grid.Column="1" Style="{StaticResource circleButtonStyle}"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="0,10,10,0" Width="50" Height="50"
                Click="EditProfileButtonClick">
            <Image Source="Resources/pencil_icon.png" Width="30" Stretch="Uniform"/> 
        </Button>

        <StackPanel Grid.Row="2" Grid.Column="0" Margin="20,0,20,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Ellipse x:Name="avatarEllipse" Style="{StaticResource circleEllipseStyle}"  HorizontalAlignment="Left" Margin="0,0,20,0"/>
                <Button x:Name="chooseAnAvatarButton" Content="{x:Static language:Lang.selectAvatarText}"
                        Style="{StaticResource primaryButtonStyle}"
                        Width="150" Height="30"
                        Click="ChooseAnAvatarButtonClick" IsEnabled="False"/>
            </StackPanel>

            <TextBlock Text="{x:Static language:Lang.nicknameText}" Style="{StaticResource bodyTextBlockStyle}" Margin="0,10,0,5"/>
            <TextBox x:Name="nicknameTextBox" Style="{StaticResource primaryTextBoxStyle}" Margin="0,0,0,5" IsEnabled="False"/>

            <TextBlock Text="{x:Static language:Lang.nameText}" Style="{StaticResource bodyTextBlockStyle}" Margin="0,10,0,5"/>
            <TextBox x:Name="nameTextBox" Style="{StaticResource primaryTextBoxStyle}" Margin="0,0,0,5" IsEnabled="False"/>

            <TextBlock Text="{x:Static language:Lang.lastNameText}" Style="{StaticResource bodyTextBlockStyle}" Margin="0,10,0,5"/>
            <TextBox x:Name="lastNameTextBox" Style="{StaticResource primaryTextBoxStyle}" Margin="0,0,0,5" IsEnabled="False"/>

        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="1" Margin="20,0,0,0">
            <TextBlock Text="{x:Static language:Lang.socialMediaText}"
                       Style="{StaticResource subtitleTextBlockStyle}"
                       Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Image Source="Resources/facebook_logo.png" Width="40" Height="40" Margin="0,0,10,0"/>
                <TextBox x:Name="facebookTextBox" Width="200" Style="{StaticResource primaryTextBoxStyle}" VerticalAlignment="Center" IsEnabled="False"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Image Source="Resources/instagram_logo.png" Width="40" Height="40" Margin="0,0,10,0"/>
                <TextBox x:Name="instagramTextBox" Width="200" Style="{StaticResource primaryTextBoxStyle}" VerticalAlignment="Center" IsEnabled="False"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Image Source="Resources/x_logo.png" Width="40" Height="40" Margin="0,0,10,0"/>
                <TextBox x:Name="xTextBox" Width="200" Style="{StaticResource primaryTextBoxStyle}" VerticalAlignment="Center" IsEnabled="False" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Image Source="Resources/tiktok_logo.png" Width="40" Height="40" Margin="0,0,10,0"/> 
                <TextBox x:Name="tikTokTextBox" Width="200" Style="{StaticResource primaryTextBoxStyle}" VerticalAlignment="Center" IsEnabled="False"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="40,40,40,0">
                <Button Content="{x:Static language:Lang.changePasswordText}" Style="{StaticResource gameButtonStyle}"
                    Margin="10,10,20,10" Height="35" Width="130"
                    Click="ButtonClickChangePassword"/>
                <Button x:Name="saveChangesButton" Content="{x:Static language:Lang.saveChangesText}" Style="{StaticResource primaryButtonStyle}"
                    Height="35" Width="100"
                    Margin="10,10,10,10"
                    Click="SaveChangesButtonClick" IsEnabled="False"/>    
            </StackPanel>
        </StackPanel>

            

    </Grid>
</Page>
