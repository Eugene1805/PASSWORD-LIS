<Page x:Class="PASSWORD_LIS_Client.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PASSWORD_LIS_Client"
      xmlns:language="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
      mc:Ignorable="d" 
      Title="{x:Static language:Lang.userPasswordText}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="{x:Static language:Lang.profileText}"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Grid.ColumnSpan="2"
                   Margin="0,10,0,20"/>

        <Button Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" Width="30" Height="30">
            <Image Source="Resources/pencil_icon.png" Stretch="Uniform"/> 
        </Button>

        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,20,0">

            <TextBlock Text="{x:Static language:Lang.selectAvatarText}"
                       Margin="0,0,0,10"
                       FontSize="16"/>
            <Ellipse Width="100" Height="100" Stroke="Black" StrokeThickness="1" Fill="LightGray" HorizontalAlignment="Left" Margin="0,0,0,20"/>

            <Label Content="{x:Static language:Lang.nicknameText}" Margin="0,10,0,5"/>
            <TextBlock Text="Eugene0518" Margin="0,0,0,10"/>

            <Label Content="{x:Static language:Lang.nameText}" Margin="0,10,0,5"/>
            <TextBlock Text="Eugenio" Margin="0,0,0,10"/>

            <Label Content="{x:Static language:Lang.lastNameText}" Margin="0,10,0,5"/>
            <TextBlock Text="González" Margin="0,0,0,10"/>

        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="1" Margin="20,0,0,0">
            <TextBlock Text="{x:Static language:Lang.socialMediaText}"
                       FontSize="16"
                       Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Image Source="Resources/facebook_logo.png" Width="20" Height="20" Margin="0,0,10,0"/>
                <TextBlock Text="Eugenio González" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Image Source="Resources/instagram_logo.png" Width="20" Height="20" Margin="0,0,10,0"/>
                <TextBlock Text="@eugene.cpp" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Image Source="Resources/x_logo.png" Width="20" Height="20" Margin="0,0,10,0"/>
                <TextBlock Text="" Width="200" VerticalAlignment="Center" Margin="0,0,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Image Source="Resources/tiktok_logo.png" Width="20" Height="20" Margin="0,0,10,0"/> 
                <TextBlock Text="" Width="200" VerticalAlignment="Center" Margin="0,0,0,0"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="{x:Static language:Lang.changePasswordText}" Margin="0,0,50,0" Padding="10"/>
            <Button Content="{x:Static language:Lang.saveChangesText}" Padding="10"/>
        </StackPanel>

    </Grid>
</Page>
