<Page x:Class="PASSWORD_LIS_Client.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PASSWORD_LIS_Client"
      xmlns:language="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="{x:Static language:Lang.userPasswordText}">

    <Grid Margin="20" Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="{x:Static language:Lang.profileText}"
                   Style="{StaticResource titleTextBlockStyle}"
                   HorizontalAlignment="Center"
                   Grid.ColumnSpan="2"
                   Margin="0,10,0,20"/>

        <Button Grid.Column="1" Style="{StaticResource circleButtonStyle}"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="0,10,10,0" Width="50" Height="50"
                Click="ButtonClickEditProfile">
            <Image Source="Resources/pencil_icon.png" Stretch="UniformToFill"/> 
        </Button>

        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,20,0">
            
            <Ellipse x:Name="Avatar" Style="{StaticResource circleEllipseStyle}"  HorizontalAlignment="Left" Margin="0,0,0,20"/>
            <Button Content="{x:Static language:Lang.selectAvatarText}"
                    Style="{StaticResource primaryButtonStyle}"
                    Margin="0,0,0,10"
                    Click="ButtonClickChooseAnAvatar"/>    

            <TextBlock Text="{x:Static language:Lang.nicknameText}" Style="{StaticResource bodyTextBlockStyle}" Margin="0,10,0,5"/>
            <TextBox x:Name="Nickname" Text="Eugene0518" Style="{StaticResource primaryTextBoxStyle}" Margin="0,0,0,10"/>

            <TextBlock Text="{x:Static language:Lang.nameText}" Style="{StaticResource bodyTextBlockStyle}" Margin="0,10,0,5"/>
            <TextBox x:Name="Name" Text="Eugenio" Style="{StaticResource primaryTextBoxStyle}" Margin="0,0,0,10"/>

            <TextBlock Text="{x:Static language:Lang.lastNameText}" Style="{StaticResource bodyTextBlockStyle}" Margin="0,10,0,5"/>
            <TextBox x:Name="LastName" Text="González" Style="{StaticResource primaryTextBoxStyle}" Margin="0,0,0,10"/>

        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="1" Margin="20,0,0,0">
            <TextBlock Text="{x:Static language:Lang.socialMediaText}"
                       Style="{StaticResource subtitleTextBlockStyle}"
                       Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Image Source="Resources/facebook_logo.png" Width="40" Height="40" Margin="0,0,10,0"/>
                <TextBox x:Name="Facebook" Text="Eugenio González" Style="{StaticResource primaryTextBoxStyle}" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Image Source="Resources/instagram_logo.png" Width="40" Height="40" Margin="0,0,10,0"/>
                <TextBox x:Name="Instagram" Text="@eugene.cpp" Style="{StaticResource primaryTextBoxStyle}" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Image Source="Resources/x_logo.png" Width="40" Height="40" Margin="0,0,10,0"/>
                <TextBox x:Name="X" Text="" Width="200" Style="{StaticResource primaryTextBoxStyle}" VerticalAlignment="Center" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Image Source="Resources/tiktok_logo.png" Width="40" Height="40" Margin="0,0,10,0"/> 
                <TextBox x:Name="TikTok" Text="" Width="200" Style="{StaticResource primaryTextBoxStyle}" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="{x:Static language:Lang.changePasswordText}" Style="{StaticResource primaryButtonStyle}"
                    Margin="0,0,50,0" Padding="10"
                    Click="ButtonClickChangePassword"/>
            <Button Content="{x:Static language:Lang.saveChangesText}" Style="{StaticResource primaryButtonStyle}"
                    Padding="10"
                    Click="ButtonClickSaveChanges"/>
        </StackPanel>

    </Grid>
</Page>
