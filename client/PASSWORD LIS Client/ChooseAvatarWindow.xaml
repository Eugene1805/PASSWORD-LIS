<Window x:Class="PASSWORD_LIS_Client.ChooseAvatarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PASSWORD_LIS_Client"
        xmlns:language="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="ChooseAvatarWindow" Height="700" Width="400">

    <Window.Resources>
        <Style x:Key="AvatarSelectorStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="mainBorder" 
                                Style="{StaticResource floatingBorderStyle}"
                                BorderThickness="3"
                                BorderBrush="Transparent"
                                Margin="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="mainBorder" Property="BorderBrush" Value="DodgerBlue"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="mainBorder" Property="BorderBrush" Value="LightGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Style="{StaticResource floatingBorderStyle}" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Style="{StaticResource subtitleTextBlockStyle}" Margin="20,0,20,10"
                           HorizontalAlignment="Center"
                           Text="{x:Static language:Lang.selectAvatarText}"/>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <RadioButton Tag="1"  Grid.Row="0" Grid.Column="0" Style="{StaticResource AvatarSelectorStyle}" GroupName="AvatarGroup">
                        <Image Source="/Resources/Avatar1.png" Width="100" Height="100"/>
                    </RadioButton>
                    <RadioButton Tag="2" Grid.Row="0" Grid.Column="1" Style="{StaticResource AvatarSelectorStyle}" GroupName="AvatarGroup">
                        <Image Source="/Resources/Avatar2.png" Width="100" Height="100"/>
                    </RadioButton>

                    <RadioButton Tag="3" Grid.Row="1" Grid.Column="0" Style="{StaticResource AvatarSelectorStyle}" GroupName="AvatarGroup">
                        <Image Source="/Resources/Avatar3.png" Width="100" Height="100"/>
                    </RadioButton>
                    <RadioButton Tag="4" Grid.Row="1" Grid.Column="1" Style="{StaticResource AvatarSelectorStyle}" GroupName="AvatarGroup">
                        <Image Source="/Resources/Avatar4.png" Width="100" Height="100"/>
                    </RadioButton>

                    <RadioButton Tag="5" Grid.Row="2" Grid.Column="0" Style="{StaticResource AvatarSelectorStyle}" GroupName="AvatarGroup">
                        <Image Source="/Resources/Avatar5.png" Width="100" Height="100"/>
                    </RadioButton>
                    <RadioButton Tag="6" Grid.Row="2" Grid.Column="1" Style="{StaticResource AvatarSelectorStyle}" GroupName="AvatarGroup">
                        <Image Source="/Resources/Avatar6.png" Width="100" Height="100"/>
                    </RadioButton>
                </Grid>

                <Button Grid.Row="2" Content="{x:Static language:Lang.selectText}" Margin="0,15,0,0" Style="{StaticResource primaryButtonStyle}"
                        HorizontalAlignment="Center" Width="150" Height="40"
                        Click="SelectAvatarButtonClick"/>
            </Grid>
        </Border>
    </Grid>
</Window>