<Window x:Class="PASSWORD_LIS_Client.VerifyCodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PASSWORD_LIS_Client"
        xmlns:language="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        MinHeight="350" MinWidth="450"
        Title="{x:Static language:Lang.verifyCodeText}" Height="350" Width="450">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/BackgroudImage.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <TextBlock Text="{x:Static language:Lang.verifyCodeMessageText}" 
                   FontSize="18"  
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>
                <Label x:Name="emailLabel" Content="email@example.com" FontSize="16"
                       FontWeight="Bold" FontFamily="Consolas"
                    Margin="0,0,0,20"/>
                
                <TextBox x:Name="verificationCodeTextBox" Width="250"/>
                <Button Content="{x:Static language:Lang.verifyCodeText}" 
                FontWeight="Bold" 
                Width="180" 
                Height="35" 
                Margin="0,15,0,10"
                HorizontalAlignment="Center" FontSize="14"
                />
                <Label Content="{x:Static language:Lang.verifyCodeNotSendText}"
                   HorizontalAlignment="Center"/>
                <TextBlock 
                    TextWrapping="Wrap"
                    HorizontalAlignment="Center">
                    <Hyperlink> 
                        <Run Text="{x:Static language:Lang.verifyCodeResendCodeText}"/>
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
