<Window x:Class="PASSWORD_LIS_Client.VerifyCodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PASSWORD_LIS_Client"
        xmlns:language="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        MinHeight="400" MinWidth="400"
        Title="{x:Static language:Lang.verifyCodeText}" Height="600" Width="600">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Resources/BackgroudImage.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="2" Margin="10" VerticalAlignment="Center">
            <TextBlock Text="{x:Static language:Lang.verifyCodeMessageText}" 
                   Style="{StaticResource titleTextBlockStyle}" 
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>
            <Label x:Name="emailLabel"  FontSize="16"
                    HorizontalAlignment="Center" FontWeight="Bold" FontFamily="Consolas"
                    Margin="0,0,0,20" Height="27" Width="203"/>

            <TextBox x:Name="verificationCodeTextBox" Style="{StaticResource primaryTextBoxStyle}" Width="180"/>
            <Button x:Name="verifyCodeButton"
                Content="{x:Static language:Lang.verifyCodeText}" 
               Style="{StaticResource primaryButtonStyle}" 
                Width="180" 
                Height="35" 
                Margin="0,15,0,10"
                HorizontalAlignment="Center" FontSize="14" Click="ButtonClickVerifyCode"
                />
            <TextBlock Text="{x:Static language:Lang.verifyCodeNotSendText}" Style="{StaticResource bodyTextBlockStyle}"
                   HorizontalAlignment="Center"/>
            <TextBlock Style="{StaticResource bodyTextBlockStyle}"
                    TextWrapping="Wrap"
                    HorizontalAlignment="Center">
                    <Hyperlink x:Name="resendCodeHyperlink" Click="HyperlinkClickResendCode"> 
                        <Run Text="{x:Static language:Lang.verifyCodeResendCodeText}"/>
                    </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
