<Page x:Class="PASSWORD_LIS_Client.LobbyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PASSWORD_LIS_Client"
      mc:Ignorable="d" 
      
      d:DesignHeight="450" d:DesignWidth="500"
      Background="#EEEFF0"
      Title="LobbyPage">

    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Style="{StaticResource floatingBorderStyle}" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Ellipse Grid.Row="0" x:Name="avatarEllipse" Style="{StaticResource circleEllipseStyle}" Margin="0,0,65,15">
                    <Ellipse.Fill>
                        <ImageBrush/>
                    </Ellipse.Fill>
                </Ellipse>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Style="{StaticResource bodyTextBlockStyle}"
                               Text="a{x:Static language:Lang.friendsListText}"
                               VerticalAlignment="Center"
                               TextAlignment="Left"/>
                    <Button Grid.Column="1" Style="{StaticResource circleButtonStyle}"
                            Width="30" Height="30" VerticalAlignment="Center">
                        <Image Source="/Resources/AddFriendIcon.png" Width="15" Height="15"/>
                    </Button>
                    <Button Grid.Column="2" Style="{StaticResource circleButtonStyle}"
                            Width="30" Height="30" VerticalAlignment="Center">
                        <Image Source="/Resources/DeleteFriendIcon.png" Width="15" Height="15"/>
                    </Button>
                </Grid>

                <Border Grid.Row="2" Style ="{StaticResource floatingBorderStyle}" Margin="0,5,0,5">
                    <TextBlock Text="[Lista de Amigos]" Style="{StaticResource bodyTextBlockStyle}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>

                <StackPanel Grid.Row="3">
                    <Button Content="a{x:Static language:Lang.topPlayersText}" 
                            Style="{StaticResource primaryButtonStyle}"
                            Height="35" Margin="0,5"/>

                    <Button Content="a{x:Static language:Lang.rulesGameText}" 
                            Style="{StaticResource primaryButtonStyle}"
                            Height="35" Margin="0,5"/>

                    <Button Content="a{x:Static language:Lang.settingsText}" 
                            Style="{StaticResource primaryButtonStyle}"
                            Height="35" Margin="0,5"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Style="{StaticResource floatingBorderStyle}" Padding="15">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="PASSWORD" Style="{StaticResource titleTextBlockStyle}"  Margin="0,0,0,20"/>
                    <Button Content="a{x:Static language:Lang.playText}"
                            Style="{StaticResource gameButtonStyle}"
                            Height="30"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="1" Style="{StaticResource floatingBorderStyle}" Padding="15">
                <StackPanel>
                    <TextBlock Text="a{x:Static language:Lang.enterCodeToJoin}" 
                               Style="{StaticResource subtitleTextBlockStyle}" 
                               Margin="0,0,0,10"/>
                    <TextBox x:Name="codeJoinTextBox" 
                             Style="{StaticResource primaryTextBoxStyle}" 
                             Height="40" Margin="0,0,0,10"/>
                    <Button Content="a{x:Static language:Lang.joinGameText}" 
                            Style="{StaticResource primaryButtonStyle}" 
                            Height="35"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
