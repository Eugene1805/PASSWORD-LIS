<Page x:Class="PASSWORD_LIS_Client.LobbyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PASSWORD_LIS_Client"
      xmlns:language="clr-namespace:PASSWORD_LIS_Client.Properties.Langs"
      mc:Ignorable="d" 
      
      d:DesignHeight="450" d:DesignWidth="500"
      Title="LobbyPage">

    <Grid Background="#EEEFF0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" >
            <Ellipse x:Name="avatarEllipse" Style="{StaticResource circleEllipseStyle}" Margin="20,20,120,10" Height="100">
                <Ellipse.Fill>
                    <ImageBrush/>
                </Ellipse.Fill>
            </Ellipse>

            <Border BorderBrush="Black" BorderThickness="3" Height="100" Margin="20,20,20,0">

            </Border>

            <Button Content="{x:Static language:Lang.topPlayersText}" 
                    Margin ="0, 20,0,0" 
                    Width="210" 
                    Height="35"
                    VerticalAlignment="Center" 
                    FontFamily="Sans Serif Collection" 
                    BorderBrush="#66B2FF" Background="#FF66B2FF" Foreground="#343A40">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>


            <Button Content="{x:Static language:Lang.rulesGameText}" 
                    Margin ="0, 20,0,0" 
                    Width="210" 
                    Height="35"
                    VerticalAlignment="Center" 
                    FontFamily="Sans Serif Collection"
                    Background="#66B2FF" BorderBrush="#66B2FF" Foreground="#343A40">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="{x:Static language:Lang.settingsText}" 
                    Margin ="0, 20,0,0" 
                    Width="210" 
                    Height="35"
                    VerticalAlignment="Center" 
                    FontFamily="Sans Serif Collection"
                    Background="#66B2FF" BorderBrush="#66B2FF" Foreground="#343A40">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <TextBlock Text="PASSWORD" 
                       FontSize="40" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,45,0,0" 
                       Foreground="#343A40"/>

            <Button Content="{x:Static language:Lang.playText}" 
                    Width="180" Height="35"
                    FontSize="14"
                    Margin="0,40,0,0"
                    FontFamily="Sans Serif Collection"
                    FontWeight="Bold"
                    HorizontalAlignment="Center" 
                    Background="#71DDAF" BorderBrush="#71DDAF" Foreground="White">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Border BorderBrush="Black" BorderThickness="1" Padding="10" Margin="20,90,20,20">
                <StackPanel>
                    <TextBlock Text="{x:Static language:Lang.enterCodeToJoinText}" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,10" FontFamily="Sans Serif Collection"/>
                    <TextBox x:Name="codeJoinTextBox" Height="30" FontSize="16" TextAlignment="Center" Margin="0,0,0,10" BorderBrush="#66B2FF" />
                    <Button Content="{x:Static language:Lang.joingGameText}" FontSize="12" Background="#66B2FF" FontFamily="Sans Serif Collection" Foreground="White" BorderBrush="#FF66B2FF" >
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="15"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Border>

        </StackPanel>

    </Grid>
</Page>
